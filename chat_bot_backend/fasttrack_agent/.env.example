# FastTrack Chatbot Environment Variables
# Copy this file to .env and fill in your actual values

# Azure OpenAI Configuration (DO NOT COMMIT ACTUAL KEYS!)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Model Deployments
CHAT_MODEL_DEPLOYMENT=your_chat_model_deployment_name
EMBEDDING_MODEL_DEPLOYMENT=your_embedding_model_deployment_name

# Optional: Tavily API for web search
TAVILY_API_KEY=your_tavily_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8010
